extends ../layout

block content

    .col.s12(style="margin-top: 0px; background: #577889; line-height: 1; padding-left: 10px;")
        a.breadcrumb(href='/vehicle-management') Vehicle Management
        a.breadcrumb(href='/vehicle-management') Vehicles
        a.breadcrumb(href="/vehicle-management/details/" + vehicleToDelete._id) Vehicle Details
        a.breadcrumb(href='#') Delete

    div.row
        div.div.col.s12.m12.l10.xl8.offset-l1.offset-xl2
            form.col.s12(action="", method="POST")
                div.row
                    div.input-field.col.s12
                        h5 Delete Vehicle
                        span Cleaning up! it also removes vehicle data from the system.
                    if !!errorMessage
                        div.input-field.col.s12
                            span.error #{errorMessage}
                    if !!vehicleToDelete
                        div.input-field.col.s12
                            p.flow-text Are you sure you want to delete #[b #{vehicleToDelete.brand} #{vehicleToDelete.vehicleModel} #{vehicleToDelete.regNo}] #[br] permanently? Adding them back won't restore their data.
                        div.input-field.col.s12
                            button.btn.waves-effect.waves-light(type="submit" style="margin-right:4px") Delete Anyway
                                i.material-icons.right delete_forever
                            a.btn.waves-effect.waves-light.urbaned.black(href="/vehicle-management/details/" + vehicleToDelete._id) Return
                                i.material-icons.right keyboard_return
                    else
                         div.input-field.col.s12
                            a.btn.waves-effect.waves-light.urbaned.black(href="/vehicle-management/") Return
                                i.material-icons.right keyboard_return
