doctype html
html(lang="en")
  head
    title=pageTitle
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content=pageTitle)
    meta(name="author", content="Xiaoying Riley at 3rd Wave Media")
    link(rel="shortcut icon", href="favicon.ico")
    script(defer, src="/plugins/fontawesome/js/all.min.js")
    link#theme-style(rel="stylesheet", href="/css/portal.css")
    block style

  body.app
    header.app-header.fixed-top
      include partials/header
      include partials/sidebar

    div.app-wrapper
      div.app-content.pt-3.p-md-3.p-lg-4
        div.container-xl(style="max-width: 100% !important;")
          block content


      footer.app-footer
        div.container.text-center.py-3
          small.copyright Developed by 
            a.app-link(href="#" target="_blank") BTSL


    script(src="/plugins/popper.min.js")
    script(src="/plugins/bootstrap/js/bootstrap.min.js")
    script(src="/plugins/chart.js/chart.min.js")
    script(src="/js/index-charts.js")
    script(src="/js/app.js")
    block script